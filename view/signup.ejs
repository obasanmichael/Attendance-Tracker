<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Attendance Tracker</title>
    <!-- Include Tailwind CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-gray-100 min-h-screen flex items-center justify-center">
    <div class="bg-white w-full max-w-md p-8 rounded-md shadow-md">
      <h2 class="text-3xl font-semibold mb-6 text-center">Sign Up</h2>
      <form action="/signup" class="space-y-4">
        <div>
          <label for="fullname" class="block text-sm font-medium text-gray-600"
            >Full Name:</label
          >
          <input
            type="text"
            id="fullname"
            placeholder="Full Name"
            class="w-full border p-2 rounded-md focus:outline-none focus:border-blue-500"
          />
        </div>
        <div>
          <label
            for="matricNumber"
            class="block text-sm font-medium text-gray-600"
            >Matriculation Number:</label
          >
          <input
            type="text"
            id="matricNumber"
            placeholder="Matriculation Number"
            class="w-full border p-2 rounded-md focus:outline-none focus:border-blue-500"
          />
        </div>
        <div>
          <label for="programme" class="block text-sm font-medium text-gray-600"
            >Programme:</label
          >
          <input
            type="text"
            id="programme"
            placeholder="Programme"
            class="w-full border p-2 rounded-md focus:outline-none focus:border-blue-500"
          />
        </div>
        <div>
          <label for="level" class="block text-sm font-medium text-gray-600"
            >Level:</label
          >
          <input
            type="text"
            id="level"
            placeholder="Level"
            class="w-full border p-2 rounded-md focus:outline-none focus:border-blue-500"
          />
        </div>
        <div>
          <label for="email" class="block text-sm font-medium text-gray-600"
            >Email:</label
          >
          <input
            type="email"
            id="email"
            placeholder="Email Address"
            class="w-full border p-2 rounded-md focus:outline-none focus:border-blue-500"
          />
        </div>
        <div>
          <label for="password" class="block text-sm font-medium text-gray-600"
            >Password:</label
          >
          <input
            type="password"
            id="password"
            placeholder="Password"
            class="w-full border p-2 rounded-md focus:outline-none focus:border-blue-500"
          />
        </div>
        <div>
          <label
            for="verifyPassword"
            class="block text-sm font-medium text-gray-600"
            >Verify Password:</label
          >
          <input
            type="password"
            id="verifyPassword"
            placeholder="Verify Password"
            class="w-full border p-2 rounded-md focus:outline-none focus:border-blue-500"
          />
        </div>
        <button
          type="submit"
          class="w-full bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-800 transition-all duration-300"
        >
          Sign Up
        </button>
      </form>
    </div>
    <script>
  document.addEventListener('DOMContentLoaded', function () {
    const loginForm = document.querySelector('#login-form');
    const signupForm = document.querySelector('#signup-form');

    if (loginForm) {
      loginForm.addEventListener('submit', function (event) {
        event.preventDefault();
        // Add logic to handle login form submission (e.g., fetch to your backend)
      });
    }

    if (signupForm) {
      signupForm.addEventListener('submit', function (event) {
        event.preventDefault();
        // Add logic to handle signup form submission (e.g., fetch to your backend)
      });
    }
  });
</script>

  </body>
</html>
